{
	"compilerOptions": {
		"outDir": "lib",
		"declaration": true,
		"target": "ES2020",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["ES2020", "DOM"],
		"moduleResolution": "bundler",
		"moduleDetection": "force",
		"strict": true,
		"noUnusedLocals": true,
		"noUncheckedIndexedAccess": true
	},
	"include": ["src/index.ts"]
}
